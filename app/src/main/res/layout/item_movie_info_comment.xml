<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_comment_tx"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_main_menu_home_sl"/>
        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorText"
            android:layout_marginLeft="4dp"
            android:text="林间的猴子"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/colorSecondText"
        android:text="八年前，在古代文学基础课的课堂上听老师分析《古代十九首》。听她细细分析“行行重行行，与君生离别”一句中绵密的相思与相隔两地想见而不..."/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="4dp">
        <ImageView
            android:id="@+id/iv_comment_good"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_main_menu_home_sl"/>
        <TextView
            android:id="@+id/tv_comment_good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondText"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_comment_good"
            android:layout_marginLeft="4dp"
            android:textSize="12sp"
            android:text="666"/>
        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondText"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="2016-10-22"/>
    </RelativeLayout>
</LinearLayout>