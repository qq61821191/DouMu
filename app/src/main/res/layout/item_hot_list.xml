<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/item_selector"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp">
    <ImageView
        android:id="@+id/iv_item_hot_list_img"
        android:layout_width="85dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_hot_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:text="遇见你真好"/>
        <TextView
            android:id="@+id/tv_item_hot_list_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorSecondText"
            android:text="评分：8.0"/>
        <TextView
            android:id="@+id/tv_item_hot_list_directors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorSecondText"
            android:text="导演：张艺谋" />
        <TextView
            android:id="@+id/tv_item_hot_list_casts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/colorSecondText"
            android:text="主演：成龙、李连杰、甄子丹、王宝强、小沈阳、周华健"/>
    </LinearLayout>
</LinearLayout>